{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true
  },
  "watchOptions": {
    "exclude": [
      "node_modules",
      "dist",
      ".git",
      "**/node_modules/**",
      "**/dist/**"
    ]
  },
  "dev": {
    "dependsOn": [
      "^build"
    ],
    "cache": false,
    "persistent": true
  }
}